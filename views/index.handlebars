
<!-- Burger Time -->


<img src="../assets/img/burgertime.jpg" alt="giant cheeseburger" style="width:304px;height:228px;">

<h1>BURGER TIME!</h1>


<!-- Submit a new burger -->

<h3>Enter the burger you want us to make & press submit!</h3>


<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="userinput"></label>
    <input type="text" id="userinput" name="name">
  </div>
  <button type="submit">Submit</button>
</form>


