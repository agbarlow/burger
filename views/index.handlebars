<!-- Burgers that were devoured -->


<div class = "crushed">

<h3>Burgers that got crushed!</h3>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <ul>
        {{this.id}}. 
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>

    
      </ul>
    {{/if}}
  {{/each}}
</ul>



